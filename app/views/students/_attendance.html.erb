<section>
  <header><h2>Attendance record</h2></header>
  
  <table data-role="table">
	 <thead>
		<tr>
		  <th>Week</th>
		  <th>Hours</th>
		</tr>
	 </thead>
	 <tbody>
		<% @hours_per_week.each do |week, hours| %>
		<tr>
		  <td><%= week %></td>
		  <td><%= distance_of_time_in_words hours %></td>
		</tr>
		<% end %>
	 </tbody>
  </table>
</section>
