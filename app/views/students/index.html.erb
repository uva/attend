<section data-role="page">

  <header><h1>Attendance overview</h1></header>

  <table data-role="table">
	 <thead>
		<tr>
		  <th>Student (ID)</th>
		  <% @weeks.each do |week| %>
		  <th>week <%= week %></th>
		  <% end %>
		</tr>
	 </thead>
	 <tbody>
		<% @students.each do |student| %>
		<tr>
		  <td><%= student.name %> (<%= student.student_id %>)</td>
		  <% @weeks.each do |week| %>
		  <td>
			 <% if @student_records[student][week] %>
			 <%= distance_of_time_in_words @student_records[student][week] %>
			 <% end %>
		  </td>
		  <% end %>
		</tr>
		<% end %>
	 </tbody>
  </table>

</section>
